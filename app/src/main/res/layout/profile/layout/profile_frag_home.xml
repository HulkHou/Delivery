<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hulk.delivery.util.ObservableScrollView
        android:id="@+id/sv_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 名字 -->
            <RelativeLayout
                android:id="@+id/rl_profile_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/border_bg">

                <ImageView
                    android:id="@+id/iv_profile_name"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@mipmap/ic_profile" />

                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_profile_name"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/iv_profile_name"
                    android:text="未登录"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/textSize_normal" />

                <ImageView
                    android:id="@+id/iv_profile_name_next"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/tv_profile_name"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@mipmap/ic_next_arrow" />

            </RelativeLayout>

            <!-- 订单管理 -->
            <RelativeLayout
                android:id="@+id/rl_profile_orders_management"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_bg">

                <ImageView
                    android:id="@+id/iv_profile_orders_management"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@mipmap/ic_profile" />

                <TextView
                    android:id="@+id/tv_profile_orders_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_profile_orders_management"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/iv_profile_orders_management"
                    android:text="订单管理"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/textSize_normal" />

                <ImageView
                    android:id="@+id/iv_profile_orders_management_next"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/tv_profile_orders_management"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@mipmap/ic_next_arrow" />
            </RelativeLayout>

            <!-- 地址管理 -->
            <RelativeLayout
                android:id="@+id/rl_profile_address_management"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_bg">

                <ImageView
                    android:id="@+id/iv_profile_address_management"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@mipmap/ic_profile" />

                <TextView
                    android:id="@+id/tv_profile_address_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_profile_address_management"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/iv_profile_address_management"
                    android:text="地址管理"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/textSize_normal" />

                <ImageView
                    android:id="@+id/iv_profile_address_management_next"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/tv_profile_address_management"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@mipmap/ic_next_arrow" />
            </RelativeLayout>

            <!-- 设置管理 -->
            <RelativeLayout
                android:id="@+id/rl_profile_setting_management"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_bg">

                <ImageView
                    android:id="@+id/iv_profile_setting_management"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@mipmap/ic_profile" />

                <TextView
                    android:id="@+id/tv_profile_setting_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_profile_setting_management"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/iv_profile_setting_management"
                    android:text="设置管理"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/textSize_normal" />

                <ImageView
                    android:id="@+id/iv_profile_setting_management_next"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/tv_profile_setting_management"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@mipmap/ic_next_arrow" />
            </RelativeLayout>

            <!-- 修改密码 -->
            <RelativeLayout
                android:id="@+id/rl_profile_password_management"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_bg">

                <ImageView
                    android:id="@+id/iv_profile_password_management"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@mipmap/ic_profile" />

                <TextView
                    android:id="@+id/tv_profile_password_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_profile_password_management"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/iv_profile_password_management"
                    android:text="密码管理"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/textSize_normal" />

                <ImageView
                    android:id="@+id/iv_profile_password_management_next"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/tv_profile_password_management"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@mipmap/ic_next_arrow" />
            </RelativeLayout>

            <!-- 消息管理 -->
            <RelativeLayout
                android:id="@+id/rl_profile_message_management"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_bg">

                <ImageView
                    android:id="@+id/iv_profile_message_management"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@mipmap/ic_profile" />

                <TextView
                    android:id="@+id/tv_profile_message_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_profile_message_management"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/iv_profile_message_management"
                    android:text="消息管理"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/textSize_normal" />

                <ImageView
                    android:id="@+id/iv_profile_message_management_next"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/tv_profile_message_management"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@mipmap/ic_next_arrow" />
            </RelativeLayout>

        </LinearLayout>
    </com.hulk.delivery.util.ObservableScrollView>
</LinearLayout>