<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/collection_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/item_border_color"
        app:tabIndicatorColor="@android:color/black"
        app:tabSelectedTextColor="@color/text_blue_color"
        app:tabTextAppearance="@style/tab_appearance"
        app:tabTextColor="#EF9A9A" />

    <android.support.v4.view.ViewPager
        android:id="@+id/collection_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/collection_tab"
        android:layout_marginTop="10dp" />

</RelativeLayout>