<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_bg">

    <TextView
        android:id="@+id/tv_profile_message_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_title" />

    <TextView
        android:id="@+id/tv_profile_message_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_profile_message_detail_title"
        android:layout_below="@+id/tv_profile_message_detail_title"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_small" />

    <TextView
        android:id="@+id/tv_profile_message_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_profile_message_detail_date"
        android:layout_below="@+id/tv_profile_message_detail_date"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_normal" />
</RelativeLayout>
