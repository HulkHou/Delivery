<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_profile_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bg">

    <TextView
        android:id="@+id/tv_item_profile_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_title" />

    <TextView
        android:id="@+id/tv_item_profile_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_item_profile_message_title"
        android:layout_below="@+id/tv_item_profile_message_title"
        android:layout_marginTop="32dp"
        android:text=""
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:id="@+id/tv_item_profile_message_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_item_profile_message_content"
        android:layout_below="@+id/tv_item_profile_message_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="查看详情"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_small" />

    <TextView
        android:id="@+id/tv_item_profile_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_item_profile_message_next"
        android:layout_alignBottom="@+id/tv_item_profile_message_next"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text=""
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_small" />
</RelativeLayout>