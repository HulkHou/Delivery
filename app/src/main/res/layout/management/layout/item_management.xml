<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rl_address_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bg">

            <TextView
                android:id="@+id/order_sn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="订单号:"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/textSize_title" />

            <TextView
                android:id="@+id/order_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/order_sn_title"
                android:layout_alignBottom="@+id/order_sn_title"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/order_sn_title"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:id="@+id/shop_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/order_sn_title"
                android:layout_below="@+id/order_sn_title"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:text="店铺名："
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/textSize_title" />

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/shop_name_title"
                android:layout_alignBottom="@+id/shop_name_title"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/shop_name_title"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:id="@+id/shop_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/shop_name_title"
                android:layout_below="@+id/shop_name_title"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:text="电话:"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/textSize_title" />

            <TextView
                android:id="@+id/shop_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/shop_phone_title"
                android:layout_alignBottom="@+id/shop_phone_title"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/shop_phone_title"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:id="@+id/shipping_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/shop_phone_title"
                android:layout_below="@+id/shop_phone_title"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:text="配送时间:"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/textSize_title" />

            <TextView
                android:id="@+id/shipping_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/shipping_time_title"
                android:layout_alignBottom="@+id/shipping_time_title"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/shipping_time_title"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:id="@+id/shipping_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/shipping_time_title"
                android:layout_below="@+id/shipping_time_title"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:text="配送地址:"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/textSize_title" />

            <TextView
                android:id="@+id/shipping_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/shipping_address_title"
                android:layout_alignBottom="@+id/shipping_address_title"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/shipping_address_title"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:id="@+id/order_amount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/shipping_address_title"
                android:layout_below="@+id/shipping_address_title"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:text="总价:"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/textSize_title" />

            <TextView
                android:id="@+id/order_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/order_amount_title"
                android:layout_alignBottom="@+id/order_amount_title"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/order_amount_title"
                android:textSize="@dimen/textSize_normal" />

            <TextView
                android:id="@+id/order_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/order_amount_title"
                android:layout_below="@+id/order_amount_title"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:text="订单状态:"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/textSize_title" />

            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/order_status_title"
                android:layout_alignBottom="@+id/order_status_title"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/order_status_title"
                android:textSize="@dimen/textSize_normal" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>