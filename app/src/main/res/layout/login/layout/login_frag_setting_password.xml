<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 新登录密码 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg">

        <TextView
            android:id="@+id/tv_login_new_password_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="新登录密码"
            android:textColor="@color/text_blue_color"
            android:textSize="@dimen/textSize_normal" />

        <EditText
            android:id="@+id/et_login_new_password"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/tv_login_new_password_title"
            android:hint="8-14位数字和字母组合"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/text_blue_color"
            android:textColorHint="#95A1AA"
            android:textSize="@dimen/textSize_small"
            android:theme="@style/MyEditText" />
    </RelativeLayout>

    <!-- 确认密码 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg">

        <TextView
            android:id="@+id/tv_login_confirm_password_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="确认密码"
            android:textColor="@color/text_blue_color"
            android:textSize="@dimen/textSize_normal" />

        <EditText
            android:id="@+id/et_login_confirm_password"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_toEndOf="@+id/tv_login_confirm_password_title"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/text_blue_color"
            android:textColorHint="#95A1AA"
            android:textSize="@dimen/textSize_small"
            android:theme="@style/MyEditText" />
    </RelativeLayout>

    <com.hulk.delivery.util.StateButton
        android:id="@+id/btn_login_password_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:gravity="center"
        android:minHeight="30dp"
        android:minWidth="40dp"
        android:text="提交"
        android:textColor="@color/text_blue_color"
        android:textSize="@dimen/textSize_title"
        app:radius="4dp" />
</LinearLayout>