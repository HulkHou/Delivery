<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg">

        <ImageView
            android:id="@+id/image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:src="@drawable/index_list" />

        <TextView
            android:id="@+id/food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/image"
            android:text="清汤牛肉面"
            android:textColor="@color/text_black_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/food_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/food_name"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@id/food_name"
            android:background="@drawable/add"
            android:text="加入收藏"
            android:textColor="@color/text_gold_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/shop_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/food_name"
            android:layout_below="@+id/food_name"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="我是一段food描述"
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:id="@+id/food_sold_count_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/food_name"
            android:layout_below="@+id/shop_desc"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="月销"
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:id="@+id/food_sold_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/food_sold_count_title_1"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/food_sold_count_title_1"
            android:text="21"
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:id="@+id/food_sold_count_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/food_sold_count_title_1"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/food_sold_count"
            android:text="份"
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:id="@+id/food_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/food_name"
            android:layout_below="@+id/food_sold_count_title_1"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="RM"
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:id="@+id/food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/food_price_title"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/food_price_title"
            android:text="21"
            android:textSize="@dimen/textSize_small" />

        <ImageView
            android:id="@+id/food_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/food_price"
            android:layout_alignEnd="@id/food_collect"
            android:layout_below="@id/food_collect"
            app:srcCompat="@mipmap/ic_add" />

    </RelativeLayout>
</FrameLayout>