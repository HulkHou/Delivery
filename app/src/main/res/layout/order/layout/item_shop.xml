<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_shop_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bg">

    <ImageView
        android:id="@+id/image"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        android:src="@drawable/index_list" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/image"
        android:text="商铺名称"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_title" />

    <ImageView
        android:id="@+id/collection_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/shop_name"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_collect_bg"
        android:src="@mipmap/list_collect_normal_normal" />

    <TextView
        android:id="@+id/shipping_start_fee_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/shop_name"
        android:layout_below="@+id/shop_name"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:text="起送 RM"
        android:textColor="@color/text_dark_gray_color"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:id="@+id/shipping_start_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/shipping_start_fee_title"
        android:layout_alignBottom="@+id/shipping_start_fee_title"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/shipping_start_fee_title"
        android:text="20"
        android:textColor="@color/text_dark_gray_color"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:id="@+id/shipping_fee_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/shipping_start_fee_title"
        android:layout_alignBottom="@+id/shipping_start_fee_title"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/shipping_start_fee"
        android:text="配送 RM"
        android:textColor="@color/text_dark_gray_color"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:id="@+id/shipping_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/shipping_fee_title"
        android:layout_alignBottom="@+id/shipping_fee_title"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/shipping_fee_title"
        android:text="5"
        android:textColor="@color/text_dark_gray_color"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:id="@+id/shipping_free_fee_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/shipping_start_fee_title"
        android:layout_below="@+id/shipping_start_fee_title"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:text="免运费"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:id="@+id/shipping_free_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/shipping_free_fee_title"
        android:layout_alignBottom="@+id/shipping_free_fee_title"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/shipping_free_fee_title"
        android:text="15"
        android:textColor="@color/text_dark_gray_color"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:id="@+id/shop_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/shipping_start_fee_title"
        android:layout_below="@+id/shipping_free_fee_title"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="@dimen/textSize_small" />

</RelativeLayout>