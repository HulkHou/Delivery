<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg">

        <ImageView
            android:id="@+id/image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:src="@drawable/index_list" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/image"
            android:text="太平洋金枪鱼肠 无香精无色素无添加 三无产品请放心购买"
            android:textColor="@color/text_black_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/shop_desc"
            android:layout_below="@+id/name"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/add"
            android:text="加入购物车"
            android:textColor="@color/text_gold_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/delivery_start_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/name"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="起送标准：RM20"
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:id="@+id/delivery_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/delivery_start_fee"
            android:layout_below="@+id/delivery_start_fee"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="配送费：RM5"
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:id="@+id/delivery_free_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/delivery_start_fee"
            android:layout_below="@+id/delivery_fee"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="满50免运费"
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:id="@+id/shop_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/delivery_start_fee"
            android:layout_below="@+id/delivery_free_fee"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="我是一段shop描述，十佳餐厅是必须的！我是一段shop描述，十佳餐厅是必须的！"
            android:textSize="@dimen/textSize_small" />

    </RelativeLayout>
</FrameLayout>