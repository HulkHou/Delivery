<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_shop_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg">

        <ImageView
            android:id="@+id/image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:src="@drawable/index_list" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/image"
            android:text="商铺名称"
            android:textColor="@color/text_black_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/shipping_start_fee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/shop_name"
            android:layout_below="@+id/shop_name"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="起送标准："
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:id="@+id/shipping_start_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/shipping_start_fee_title"
            android:layout_alignBottom="@+id/shipping_start_fee_title"
            android:layout_marginLeft="0dp"
            android:layout_toEndOf="@+id/shipping_start_fee_title"
            android:text="20RM"
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/shipping_start_fee_title"
            android:layout_marginEnd="17dp"
            android:background="@drawable/add"
            android:text="加入购物车"
            android:textColor="@color/text_gold_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/shipping_fee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/shipping_start_fee_title"
            android:layout_below="@+id/shipping_start_fee_title"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="配送费："
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:id="@+id/shipping_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/shipping_fee_title"
            android:layout_alignBottom="@+id/shipping_fee_title"
            android:layout_marginLeft="0dp"
            android:layout_toEndOf="@+id/shipping_fee_title"
            android:text="5RM"
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:id="@+id/shipping_free_fee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/shipping_start_fee_title"
            android:layout_below="@+id/shipping_fee_title"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="免运费标准："
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:id="@+id/shipping_free_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/shipping_free_fee_title"
            android:layout_alignBottom="@+id/shipping_free_fee_title"
            android:layout_marginLeft="0dp"
            android:layout_toEndOf="@+id/shipping_free_fee_title"
            android:text="15RM"
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:id="@+id/shop_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/shipping_start_fee_title"
            android:layout_below="@+id/shipping_free_fee_title"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="@dimen/textSize_small" />

    </RelativeLayout>
</FrameLayout>