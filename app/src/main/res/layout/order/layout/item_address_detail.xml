<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_address_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bg">

    <TextView
        android:id="@+id/address_tag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="标签:"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_title" />

    <TextView
        android:id="@+id/address_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/address_tag_title"
        android:layout_alignBottom="@+id/address_tag_title"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/address_tag_title"
        android:text="标签"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:id="@+id/consignee_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/address_tag_title"
        android:layout_below="@+id/address_tag_title"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="收货人："
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_title" />

    <TextView
        android:id="@+id/consignee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/consignee_title"
        android:layout_alignBottom="@+id/consignee_title"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/consignee_title"
        android:text="标签"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:id="@+id/phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/consignee_title"
        android:layout_below="@+id/consignee_title"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="电话:"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_title" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/phone_title"
        android:layout_alignBottom="@+id/phone_title"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/phone_title"
        android:text="标签"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:id="@+id/unit_no_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/phone_title"
        android:layout_below="@+id/phone_title"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="门牌号:"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_title" />

    <TextView
        android:id="@+id/unit_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/unit_no_title"
        android:layout_alignBottom="@+id/unit_no_title"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/unit_no_title"
        android:text="标签"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:id="@+id/build_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/unit_no_title"
        android:layout_below="@+id/unit_no_title"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="大厦名称:"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_title" />

    <TextView
        android:id="@+id/build_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/build_name_title"
        android:layout_alignBottom="@+id/build_name_title"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/build_name_title"
        android:text="标签"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:id="@+id/street_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/build_name_title"
        android:layout_below="@+id/build_name_title"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="街道地址:"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/textSize_title" />

    <TextView
        android:id="@+id/street"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/street_title"
        android:layout_alignBottom="@+id/street_title"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/street_title"
        android:text="标签"
        android:textSize="@dimen/textSize_normal" />

</RelativeLayout>
